@model Trangsuc.Models.suathongtin
@{
    ViewBag.Title = "Sửa thông tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/script.js")" type="text/javascript"></script>
<div class="covercenter">
<div class="columncenter">
@if (Request.IsAuthenticated)
{
    if (Session["User"] != null)
    {
         if (!String.IsNullOrEmpty(@ViewBag.saithongtin))
    {
         <div class="header-center">SỬA THÔNG TIN NGƯỜI DÙNG</div>
        using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.username)
            @Html.HiddenFor(model => model.hoten)
            <div style="width:300px; margin: 20px 10px 10px 22px; color:Black">Chào bạn: <b style="color:Red">@Html.DisplayTextFor(model => model.hoten)</b></div>
            <div style="width:300px; margin: 10px 10px 10px 22px; color:Black">Bạn có thể cập nhật các thông tin sau</div>
            <div style="margin-left:22px"><text style="color:Red">@ViewBag.saithongtin</text></div>
            <table style="margin: 10px 10px 10px 20px; color:Black">
                <tr>
                    <td>@Html.LabelFor(model => model.sdt)</td>
                    <td>@Html.TextBoxFor(model => model.sdt, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.sdt)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.email)</td>
                    <td>@Html.TextBoxFor(model => model.email, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.email)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.passwordcu)</td>
                    <td>@Html.PasswordFor(model => model.passwordcu, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.passwordcu)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.password)</td>
                    <td>@Html.PasswordFor(model => model.password, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.password)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.xacnhanmatkhau)</td>
                    <td>@Html.PasswordFor(model => model.xacnhanmatkhau, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.xacnhanmatkhau)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Lưu" /></td>
                </tr>
            </table>
        }
    }
         else
         {
    <div class="header-center">SỬA THÔNG TIN NGƯỜI DÙNG</div>
             using (Html.BeginForm())
             {
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.username)
            @Html.HiddenFor(model => model.hoten)
            <div style="width:300px; margin: 20px 10px 10px 22px; color:Black">Chào bạn: <b style="color:Red">@Html.DisplayTextFor(model => model.hoten)</b></div>
            <div style="width:300px; margin: 10px 10px 10px 22px; color:Black">Bạn có thể cập nhật các thông tin sau</div>
            <table style="margin: 10px 10px 10px 20px; color:Black">
                <tr>
                    <td>@Html.LabelFor(model => model.sdt)</td>
                    <td>@Html.TextBoxFor(model => model.sdt, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.sdt)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.email)</td>
                    <td>@Html.TextBoxFor(model => model.email, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.email)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.passwordcu)</td>
                    <td>@Html.PasswordFor(model => model.passwordcu, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.passwordcu)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.password)</td>
                    <td>@Html.PasswordFor(model => model.password, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.password)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.xacnhanmatkhau)</td>
                    <td>@Html.PasswordFor(model => model.xacnhanmatkhau, new { size = 30 })
                        @Html.ValidationMessageFor(model => model.xacnhanmatkhau)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Lưu" /></td>
                </tr>
            </table>
             }
         }
    }
    else
    {
        <div class="header-center">ĐĂNG NHẬP</div>
        <div style="margin:10px 10px 10px 15px">
        <p style="padding-left: 10px; color:Black"><text> Phiên làm việc trước của bạn đã bị xóa. Vui lòng nhấn vào <a href="/user/dangnhap?returnUrl=@Request.Url.PathAndQuery"> đây </a>để vào trang đăng nhập.</text></p>
        </div>
    }
}
else
{
    <div class="header-center">ĐĂNG NHẬP</div>
       <p style="padding-left: 10px; color:Black"><text> Bạn chưa đăng nhập. Vui lòng nhấn vào <a href="/user/dangnhap?returnUrl=@Request.Url.PathAndQuery"> đây </a>để vào trang đăng nhập.</text></p>
     
}
</div>
</div>

