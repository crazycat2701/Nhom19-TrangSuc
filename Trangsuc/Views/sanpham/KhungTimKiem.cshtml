                <a href="" id="link" onclick="return show_hide()">Tìm kiếm nâng cao</a>
            </div>
            <div id="full" style="display:none">
                <form action="/sanpham/TimKiemNangCao" method="get" name="tknangcao" onsubmit="return checktknc();">
    	             @{Html.RenderAction("Menutimkiem", "loaisanpham");}
		            <input id="tensanpham" type="text" onblur="if(this.value=='') this.value=this.defaultValue" onfocus="if(this.value==this.defaultValue) this.value=''" value="tên sản phẩm" name="tensp" autocomplete="off" style="width:100px; height: 16px">
