@model Trangsuc.Models.sanphamsua
@if (Session["Admin"] != null)
{
    {
        ViewBag.Title = "Sửa thông tin";
        Layout = "~/Areas/Admin/Views/Shared/_Layoutadmin.cshtml";
    }
    <script type="text/javascript" src="@Url.Content("~/Scripts/script.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>   
    <div class="headercolumn">QUẢN LÝ SẢN PHẨM - CẬP NHẬT THÔNG TIN SẢN PHẨM</div>
    <div class="noidungright">
    
        
        @using (Html.BeginForm("suathongtin", "quanlysanpham", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        @Html.ValidationSummary(true)
            <center>
            <div class="tieude">Thông tin sản phẩm</div>
            @Html.HiddenFor(model => model.masanpham)
            @Html.HiddenFor(model => model.maloai)
            @Html.HiddenFor(model => model.hinhanh) 
            @Html.HiddenFor(model => model.sanphammoi)  
                <table style="text-align:left; margin: 20px 10px 10px 20px;">
                <tr>
                    <th style="width:150px; text-align:left; color:#000099">Mã sản phẩm</th>
                    <td style="width:auto; padding: 10px 5px 5px 5px; color:#000033; text-transform:uppercase;">
                        <b>@Html.DisplayTextFor(model => model.masanpham)</b></td>
                </tr>
                <tr>
                    <th style="text-align:left; color:#000099">Tên sản phẩm</th>
                    <td style="width:auto; padding: 10px 5px 5px 5px">
                        @Html.TextBoxFor(model => model.tensanpham, new { size = 30 })
                        <text style="color:Red">@Html.ValidationMessageFor(model => model.tensanpham)</text></td>
                </tr>
                <tr>
                    <th style="text-align:left; color:#000099">Loại</th>
                    <td style="width:auto; padding: 10px 5px 5px 5px">
                       <b>@ViewBag.tenloai</b></td>
                </tr>
                <tr>
                    <th style="text-align:left; color:#000099">Chất liệu</th>
                    <td style="width:auto; padding: 10px 5px 5px 5px">
                        @Html.TextBoxFor(model => model.chatlieu, new { size = 30 })
                        <text style="color:Red">@Html.ValidationMessageFor(model => model.chatlieu)</text></td>
                </tr>
                <tr>
                    <th style="text-align:left; color:#000099">Giá sản phẩm</th>
                    <td style="width:auto; padding: 10px 5px 5px 5px">
                        @Html.TextBoxFor(model => model.giasanpham, new { size = 30 })
                        <text style="color:Red">@Html.ValidationMessageFor(model => model.giasanpham)</text></td>
                </tr>
                <tr>
                    <th style="text-align:left; color:#000099">Hình ảnh</th>
                    <td style="width:auto; padding: 10px 5px 5px 5px">

                         @Html.TextBoxFor(model => model.hinhanh, new { size = 30, disabled = "disabled"  })
                      <input type="file" name="file" value="" /></td>
                </tr>
                <tr>
                    <td></td><td style="width:auto; padding: 10px 5px 5px 5px"><input type="submit" value="Lưu" /></td>
                </tr>
                <tr valign="middle">
                    <td colspan="2" style="text-align:left">
                    <div class="tieude2">
                        <a title="Trở về" href="/admin/quanlysanpham/index" style="text-decoration:none">
                        <table align="left"><tr height="20px" valign="middle"><td><img src="@Url.Content("~/images/back1.png")" width="20px" height="20px"/></td><td>DANH SÁCH SẢN PHẨM</td></tr></table>
                        </a>
                    </div>
                </td>
                </tr>

            </table></center>
        }
    
  
    </div>

}
else
{
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <div class="columnleft"></div>
    <div class="columnngoai"></div>
    <div class="covercenter">
        <div class="columncenter">
            <div class="header-center">ĐĂNG NHẬP</div>
            <div class="text" style="margin: 20px 10px 20px 20px">
                <div>
                    <text> Bạn chưa đăng nhập. Vui lòng nhấn vào <a href="/admin/dangnhap?returnUrl=@Request.Url.PathAndQuery"> đây </a>để vào trang đăng nhập.</text>
                </div>
            </div>
        </div>
    </div>
}     



